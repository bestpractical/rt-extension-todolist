%  if ( $custom_fields->Count ) {
    <& /Elements/TodoList,
        Object => $ARGS{'Ticket'},
        ShowAsForm => 0,
    &>
%  }
<%init>
return unless $Ticket;
return unless RT->Config->Get('TodoListShowOnUpdate');
my $custom_fields = RT::CustomFields->new($session{'CurrentUser'});
$custom_fields->LimitTodoToObject($Ticket->QueueObj->Id);
</%init>
<%args>
$Ticket  => undef
</%args>
